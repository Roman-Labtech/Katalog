<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.helloworld" version="1.6.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>FW7-3</name>
    <description>
        A basic Framework7 template for PhoneGap.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <access origin="*" />
    
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="DisallowOverscroll" value="true" />
        <preference name="AutoHideSplashScreen" value="true" />
        <preference name="SplashScreen" value="screen" />
        <preference name="SplashScreenDelay" value="3000" />
        <preference name="SplashMaintainAspectRatio" value="true" />
        <preference name="android-minSdkVersion" value="14" />
        <preference name="StatusBarBackgroundColor" value="#171515" />
        <preference name="SplashShowOnlyFirstTime" value="false" />
        <splash density="land-hdpi" src="res/img/screen.png" />
        <splash density="land-ldpi" src="res/img/screen.png" />
        <splash density="land-mdpi" src="res/img/screen.png" />
        <splash density="land-xhdpi" src="res/img/screen.png" />
        <splash density="port-hdpi" src="res/img/screen.png" />
        <splash density="port-ldpi" src="res/img/screen.png" />
        <splash density="port-mdpi" src="res/img/screen.png" />
        <splash density="port-xhdpi" src="res/img/screen.png" />
        <icon density="ldpi" src="res/icon/android/drawable-ldpi-icon.png" />
        <icon density="mdpi" src="res/icon/android/drawable-mdpi-icon.png" />
        <icon density="hdpi" src="res/icon/android/drawable-hdpi-icon.png" />
        <icon density="xhdpi" src="res/icon/android/drawable-xhdpi-icon.png" />
        <icon density="xxhdpi" src="res/icon/android/drawable-xxhdpi-icon.png" />
        <icon density="xxxhdpi" src="res/icon/android/drawable-xxxhdpi-icon.png" />
    </platform>
    
    <preference name="DisallowOverscroll" value="true" />
    <engine name="android" spec="^6.2.3" />
    <!--<plugin name="CordovaCallNumberPlugin" spec="https://github.com/Rohfosho/CordovaCallNumberPlugin.git" />
    <plugin name="CordovaCallNumberPlugin-master" spec="https://github.com/Rohfosho/CordovaCallNumberPlugin" />-->
    <plugin name="CordovaCallNumberPlugin" spec="https://github.com/Rohfosho/CordovaCallNumberPlugin.git" />
    <plugin name="cordova-plugin-console"  spec="https://github.com/apache/cordova-plugin-console.git"/>
    <plugin name="cordova-plugin-dialogs" spec="https://github.com/apache/cordova-plugin-dialogs.git"/>
    <plugin name="cordova-plugin-inappbrowser" />
    <plugin name="cordova-plugin-splashscreen" spec="https://github.com/apache/cordova-plugin-splashscreen.git"/> 
   <plugin name="cordova-plugin-statusbar" spec="https://github.com/apache/cordova-plugin-statusbar.git"/>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    
    
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name = "SplashScreen" value = "screen" />
    <preference name = "SplashScreenDelay" value = "3000" />
    <preference name = "SplashMaintainAspectRatio" value = "true" />
    <splash src="res/img/screen.png" />
   
    <platform name="android">
    <!-- you can use any density that exists in the Android project -->
    <splash src="res/img/screen.png" density="land-hdpi"/>
    <splash src="res/img/screen.png" density="land-ldpi"/>
    <splash src="res/img/screen.png" density="land-mdpi"/>
    <splash src="res/img/screen.png" density="land-xhdpi"/>
    <splash src="res/img/screen.png" density="port-hdpi"/>
    <splash src="res/img/screen.png" density="port-ldpi"/>
    <splash src="res/img/screen.png" density="port-mdpi"/>
    <splash src="res/img/screen.png" density="port-xhdpi"/>
    
      <access origin="*"/>
  <access origin="tel:*" launch-external="yes"/>
  <access origin="mailto:*" launch-external="yes"/>
  <allow-intent href="*"/>
  <allow-navigation href="*"/>
  <allow-navigation href="tel:*"/>
  <allow-navigation href="mailto:*"/>
  <allow-navigation href="data:*"/>
    
    <icon src="icon.png" />
</platform>
   <!-- <splash src="/img/i-f7-material.png"/>-->
   	

</widget>